<div class="content">
	<div class="banner">
		<div class="container"><h1><%= page.title %></h1></div>
	</div>
	<div class="container">
		<article class="post">
			<%- page.content %>
			<p class="date"><%- date(page.date, "YYYY年M月D日") %></p>
			<div class="info">
				<div class="author">
					<%= config.author %>
					<% if (page.categories && page.categories.length){ %>
						《<%- list_categories(page.categories, {
							show_count: false,
							class: 'nexmoefont icon-appstore-fill ',
							style: 'none',
							separator: ''
						}) %>》
					<% } %>
				</div>
				<a
					class="copyright"
					href="https://creativecommons.org/licenses/by-nc-sa/4.0/deed.zh"
					target="_blank"
					>&copy; CC BY-NC-SA 4.0</a
				>
			</div>
		</article>
	</div>
	<div class="other">
		<div class="container">
			<nav class="post-nav">
				<div class="new">
					<span>上一章</span>
					<% if(page.prev){%>
					   <a href="<%- url_for(page.prev.path) %>">  <%= page.prev.title %></a>
					<%}%>
				</div>

				<div class="old">
					<span>下一章</span>
					<% if(page.next){%>
						<a href="<%- url_for(page.next.path) %>"> <%= page.next.title %> </a>
					<%}%>
				</div>
			</nav>
		</div>
	</div>
	<div class="container comment">
		<%- theme.comment ? partial('_partial/_comment/' + theme.comment) : '' %>
	</div>
</div>